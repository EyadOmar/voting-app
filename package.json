{
  "name": "voting-app",
  "description": "Make decisions with friends via ranked voting!",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev:server": "npm run start -w server",
    "dev:client": "npm run dev -w client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "lint:server": "npm run lint -w server",
    "lint:client": "npm run lint -w client",
    "lint": "npm run lint:server && npm run lint:client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EyadOmar/voting-app"
  },
  "keywords": [
    "ts",
    "react",
    "nestjs",
    "socketjs",
    "vite"
  ],
  "author": "Eyad Omar",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
